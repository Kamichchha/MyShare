extends layout

block content
  #banner.page-header
    .row
        .col-lg-8
            h1=pageHeader.title
                small &nbsp; #{pageHeader.strapLine}
  .row
    .col-xs-12.col-sm-8
        .row.list-group
            .col-xs-12
              h4.row
                .col-xs-4
                  p Stock Name
                .col-xs-2
                  p Last Price
                .col-xs-2
                  p 52wk High
                .col-xs-2
                  p 52wk Low
                .col-xs-2
                  p Volume    
        each stock in stocks 
          .row.list-group
              .col-xs-12
                .row
                  .col-xs-4
                    a(href="/stock")=stock.name
                  .col-xs-2
                    p=stock.LTP
                  .col-xs-2
                    p=stock.WkHigh52
                  .col-xs-2
                    p #{stock.WkLow52}
                  .col-xs-2
                    p #{stock.Volume} 
                .row
                  .col-xs-6
                    each category in stock.categories
                      span.label.label-warning=category    
                      | &nbsp;
                  .col-xs-3
                    button.btn-default.btn-success.pull-right Add to WatchList
                  .col-xs-3                   
                    button.btn-default.btn-primary.pull-right Add to Portfolio                                           
    .col-xs-12.col-sm-4
        p Ads Section
