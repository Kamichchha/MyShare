extends layout

block content
  .row.page-header
    .col-xs-12
      h1=name
  .row
    .col-xs-12.col-md-8
      .row
        .col-xs-12
          .panel.panel-primary
            .panel-heading
              h3.panel-title Stock Information
            .panel-body
              p Last Traded Price : #{LTP}
              p 52-Week High: #{WkHigh52}
              p 52-Week Low: #{WkLow52}
              p Volume: #{Volume}
      .row
        .col-xs-12
          .panel.panel-primary
            .panel-heading
              h3.panel-title Stock Categorization
            .panel-body
              each category in categories
                span.label.label-warning #{category} 
                | &nbsp;  
    .col-xs-12.col-md-4
      p Image section
  .row
    .col-xs-12
      .panel.panel-primary.review-panel
        .panel-heading
          h3.panel-title Stock reviews
          a#reviewBtn.btn.btn-default.pull-right(href="/stock/addReview") Add Review
        .panel-body.review-container
          each review in reviews
            .row
              .review
                .well.well-sm.review-header
                  span.reviewAuthor #{review.author}
                  span.reviewTimestamp #{review.timestamp}
                .col-xs-12
                  p !{(review.comment).replace('/\n/g','<br/>')}

 

